<%= button_to "Go Back", controller.params.merge(:action => :index), :method => :get %>
<%= form_for current_user, :url => {:controller => :entries, :action => :update}, :method => :post do |f| %>
<table>
  <th>
    <tr>
      <td><%= link_to "Entries", edit_entries_path(:order => "body") %></td>
      <td><%= link_to "Priority", edit_entries_path(:order => "priority desc") %></td>
      <td><%= link_to "Due Date", edit_entries_path(:order => "due_date desc") %></td>
      <td></td>
    </tr>
  </th>
  <tbody>
    <%= f.fields_for :entries, @entries do |e| %>
    <tr>
      <td>
        <%= e.text_field :body %>
      </td>
      <td>
        <%= e.text_field :priority %>
      </td>
      <td>
        <%= e.text_field :due_date %>
      </td>
      <td>
        <button type="button" class="delButton">Delete</button>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= f.submit "Save List" %>
<button type="button" id="addButton">Add Item</button>
<% end %>
